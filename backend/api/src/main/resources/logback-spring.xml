<configuration>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} | %t | %-5level | %c::%M | %X{trxId} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Info Log Appender -->
    <appender name="EXCEPTION_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/exception.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover -->
            <fileNamePattern>logs/exception.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} | %t | %-5level | %c::%M | %X{trxId} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Debug Log Appender -->
    <appender name="DEBUG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/um-logs.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/um-logs.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} | %t | %-5level | %c::%M | %X{trxId} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set Spring logging and hibernate to ERROR -->
    <logger name="org.springframework" level="ERROR"/>
    <logger name="org.hibernate" level="ERROR"/>

    <!-- Log Level Settings -->
    <logger name="com.matjar" level="TRACE" additivity="false">
        <appender-ref ref="DEBUG_FILE"/>
    </logger>

    <!-- Root logger: Console only shows INFO and ERROR -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="EXCEPTION_FILE"/>
    </root>

</configuration>
